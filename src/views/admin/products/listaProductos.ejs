<%-include("../partials/head")%> 
<body id="body-listadoProducto">
    <%-include("../partials/header")%>
    <main class="container min-vh-100 pt-5" id="main-listadoProducto">
        <div class="div-caja-table">
            <table class="table table-striped table-hover" id="id-tablet-lista">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Categoria</th>
                        <!-- <th scope="col">Emprendimiento</th> -->
                        <th scope="col">Stock</th>
                        <!-- <th scope="col">Envio Gratis</th> -->
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach((producto, i) => { %>
                        <a href="/products/productDetail/<%-producto.id%>">
                        <tr>
                                <th scope="row"><%- i+1 %></td>
                                <td><%-producto.name%></td>
                                <td><%-producto.price%></td>
                                <td><%-producto.Category.name%></td>
                                <td><%-producto.stock%></td>
                                <!-- <td><%-producto.shipment%></td> -->
                                <td>
                                    <a href="/admin/products/edit/<%-producto.id%> " id="btn-admin-modificacion">
                                        <i class="fa-solid fa-pen-to-square" id="i-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <form action="/admin/products/eliminar/<%-producto.id%>?_method=delete" method="post">
                                        <button type="submit">
                                            <i class="fa-regular fa-trash-can" id="i-delete"></i>
                                        </button>
                                        
                                    </form>
                                </td>
                        </tr>
                        </a> 
                    <% }) %>                

                </tbody>
            </table>
        </div>
    </main>
    <%-include("../partials/footer")%> 
      
    <%-include("../partials/script")%> 
</body>
</html>